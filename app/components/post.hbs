<article>
  <h2>{{@post.title}}</h2>
  <p class="excerpt">{{@post.body}}</p>
  <p class="post-credit">
    {{#if @isSingle}}
      <LinkTo @route="edit.current" @model={{@post.id}}>Edit Post</LinkTo>
    {{else}}
      <LinkTo @route="post.current" @model={{@post.id}}>View Post</LinkTo>
    {{/if}}

    <span>{{@post.name}}</span>

    <TimeAgo @timestamp={{@post.date}} />
  </p>
  <ReactionButtons />
</article>