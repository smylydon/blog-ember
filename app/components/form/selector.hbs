{{#if @label}}
  <label htmlFor="selector">{{@label}}</label>
{{/if}}
<select name="selector" {{on "change" this.selected}} {{did-insert this.ready}}>
  <option value=""></option>
  {{#each @items as |item|}}
    {{#if (eq item.id @initialIid)}}
      <option value={{item.id}} selected>{{item.item}}</option>
    {{else}}
      <option value={{item.id}}>{{item.item}}</option>
    {{/if}}
  {{/each}}
</select>