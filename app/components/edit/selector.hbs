<label htmlFor="postAuthor">Author:</label>
<select id="postAuthor" name="postAuthor">
  <option value=""></option>
  {{#each @users as |user|}}
    {{#if (eq user.myId @userid)}}
      <option value={{user.id}} selected>{{user.username}}</option>
    {{else}}
      <option value={{user.id}}>{{user.username}}</option>
    {{/if}}
  {{/each}}
</select>